{
  "name": "lots",
  "description": "Little Open Ticket System. View todos and tags in a codebase.",
  "version": "0.5.0",
  "main": "app.js",
  "scripts": {
    "prepublish": "cp -r node_modules/hifile/assets/css/* public/css/hifile;cp -r node_modules/hifile/assets/js/* public/js/hifile",
    "start": "./bin/LOTS",
    "beautify": "node_modules/gulp/bin/gulp.js beautify --write",
    "test": "./node_modules/gulp/bin/gulp.js lint && node test"
  },
  "bin": {
    "LOTS": "bin/LOTS"
  },
  "dependencies": {
    "mkdirp": "~0.3.5",
    "marked": "~0.2.9",
    "moment": "^2.3.1",
    "ejs": "^1.0.0",
    "hifile": "^1.4.0",
    "hapi": "^5.1.0",
    "chalk": "^0.4.0",
    "commander": "^2.2.0"
  },
  "devDependencies": {
    "tape": "^2.12.3",
    "gulp": "^3.6.2",
    "minimist": "^0.1.0",
    "gulp-jsbeautifier": "0.0.2",
    "gulp-diff": "^0.1.4",
    "confidence": "^0.12.1",
    "gulp-eslint": "^0.1.7"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/diffsky/LOTS.git"
  },
  "keywords": [
    "LOTS",
    "little",
    "open",
    "ticket",
    "system",
    "tag",
    "tickets",
    "bang"
  ],
  "author": "Matthew Hadley <matthew.hadley@gmail.com>",
